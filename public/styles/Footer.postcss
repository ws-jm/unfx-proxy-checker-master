footer {
    padding: 2em;
    display: flex;
    flex-flow: row wrap;
    max-width: 1600px;
    margin: auto;

    & .links {
        margin-right: 1.5em;
        display: flex;
        flex-flow: row wrap;
        align-items: center;

        & a {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-right: 2em;
            color: color(var(--grey-color) alpha(80%));
            text-decoration: none;

            &:hover {
                color: var(--grey-color);

                & svg {
                    fill: var(--grey-color);
                }
            }

            &.rocket svg {
                height: 1.75em;
                width: 1.75em;
            }

            & span {
                font-weight: 700;
                margin-left: 0.5em;
                transition: color 0.5s easeOne;
            }

            & svg {
                width: 2em;
                height: 2em;
                fill: color(var(--grey-color) alpha(80%));
                transition: fill 0.5s easeOne;
            }
        }
    }

    & .get-em {
        display: flex;
        align-items: center;
        margin-left: auto;
        animation: fade-footer-get-em 0.7s easeOne both;

        & p {
            margin: 0;
            border-radius: 1.25em;
            color: var(--blue-color);

            & a {
                display: inline-flex;
                align-items: center;
                margin: 0 0.25em;
                text-decoration: none;
                font-weight: 700;
                transition: color 0.5s easeOne;
                color: color(var(--green-color) alpha(70%));

                &:hover {
                    color: var(--green-color);

                    & svg {
                        fill: var(--green-color);
                    }
                }

                & svg {
                    width: 1em;
                    height: 1em;
                    margin-left: 0.35em;
                    transition: fill 0.5s easeOne;
                    fill: color(var(--green-color) alpha(70%));
                }
            }
        }
    }

    & .ops {
        display: flex;
        width: 100%;
        margin: 2em auto 0 auto;
        padding: 0.5em 1em;
        max-width: 960px;
        font-weight: 700;
        border-radius: 1.5em;
        position: relative;
        color: var(--white-color-back);
        background: linear-gradient(127deg, color(var(--green-color) alpha(35%)), color(var(--blue-color) alpha(35%)));

        & .d {
            margin-left: auto;
        }

        &:before {
            content: attr(data-version);
            position: absolute;
            width: 80px;
            display: flex;
            justify-content: center;
            align-items: center;
            color: color(var(--green-color) alpha(65%));
            height: 50px;
            margin-top: -17px;
            border-radius: 50px;
            left: calc(50% - 40px);
            background-color: color(var(--white-color-back) alpha(85%));
        }

        & a {
            display: flex;
            text-decoration: none;
            align-items: center;
            color: var(--white-color-back);
            transition: color 0.5s easeOne;

            &:nth-child(1):hover {
                color: var(--green-color);

                & svg {
                    fill: var(--green-color);
                }
            }

            &:nth-child(2):hover {
                color: var(--blue-color);

                & svg {
                    fill: var(--blue-color);
                }
            }

            & svg {
                margin-right: 0.5em;
                width: 1em;
                transition: fill 0.5s easeOne;
                height: 1em;
                fill: var(--white-color-back);
            }
        }
    }
}

@keyframes fade-footer-get-em {
    from {
        opacity: 0;
        transform: translateX(15%);
    }
    to {
        opacity: 1;
        transform: translateX(0);
    }
}

.container.dark footer {
    & .ops:before {
        background-color: color(var(--back-black-color) alpha(85%));
    }

    & .ops a {
        color: var(--back-black-color);

        &:nth-child(1):hover {
            color: var(--green-color);

            & svg {
                fill: var(--green-color);
            }
        }

        &:nth-child(2):hover {
            color: var(--blue-color);

            & svg {
                fill: var(--blue-color);
            }
        }

        & svg {
            fill: var(--back-black-color);
        }
    }

    & .links a {
        color: color(var(--green-color) alpha(60%));

        &:hover {
            color: color(var(--green-color) alpha(85%));

            & svg {
                fill: var(--green-color);
            }
        }

        & svg {
            fill: color(var(--green-color) alpha(60%));
        }
    }
}
